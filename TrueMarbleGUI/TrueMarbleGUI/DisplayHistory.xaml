<Window x:Class="TrueMarbleGUI.DisplayHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrueMarbleGUI"
        mc:Ignorable="d"
        Title="DisplayHistory" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Loaded="Grid_Loaded">
        <ListView x:Name="IvwHistory" HorizontalAlignment="Center" Height="362" Margin="30,30,30,30" VerticalAlignment="Center" Width="573" SelectionChanged="IvwHistory_SelectionChanged">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn x:Name="Zoom" Header="Zoom" Width="187"/>
                    <GridViewColumn x:Name="X" Header="X" Width="187"/>
                    <GridViewColumn x:Name="Y" Header="Y" Width="187"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="BtnClose" Content="_Close" HorizontalAlignment="right" Margin="20,20,20,20" VerticalAlignment="Bottom" Width="75" Click="btnClose_Click"/>

    </Grid>
</Window>
